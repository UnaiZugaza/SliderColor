<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<VBox alignment="CENTER" prefHeight="350" prefWidth="450" spacing="20" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.unaizugaza.ColorController">

    <Rectangle fx:id="colorRect" arcHeight="0" arcWidth="0" fill="rgb(0,0,0)" height="100.0" width="300.0" VBox.vgrow="ALWAYS" />
    <Label text="Desplaza los sliders para cambiar el color" />

    <!--Rojo -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Rojo:" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets left="10.0" right="10.0" />
         </HBox.margin></Label>
        <Slider fx:id="sliderRed" blockIncrement="1" majorTickUnit="50" max="255" min="0" minorTickCount="4" showTickLabels="true" showTickMarks="true" value="0" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets left="10.0" right="80.0" />
         </HBox.margin></Slider>
    </HBox>

    <!-- Verde -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Verde:" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets left="10.0" right="10.0" />
         </HBox.margin></Label>
        <Slider fx:id="sliderGreen" blockIncrement="1" majorTickUnit="50" max="255" min="0" minorTickCount="4" showTickLabels="true" showTickMarks="true" value="0" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets left="10.0" right="80.0" />
         </HBox.margin></Slider>
    </HBox>

    <!--Azul -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Azul:" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets left="10.0" right="10.0" />
         </HBox.margin></Label>
        <Slider fx:id="sliderBlue" blockIncrement="1" majorTickUnit="50" max="255" min="0" minorTickCount="4" showTickLabels="true" showTickMarks="true" value="0" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets left="10.0" right="80.0" />
         </HBox.margin></Slider>
    </HBox>

</VBox>
